package fr.utt.lo02.carte;

import java.util.ArrayList;

import fr.utt.lo02.partie.Partie;

public class TourJoueur {

	private ArrayList<Integer> ListeCarte;
	private Partie partie;
	
	public TourJoueur(Partie partie) {
		this.ListeCarte = new ArrayList<Integer>();
		this.partie = partie;
	}

	public ArrayList<Integer> getListeCarte() {
		return ListeCarte;
	}
	
	public void addCarteListe(int i){
		this.ListeCarte.add(i);
	}
	
	public void changementEtat(int position, boolean bool){
		if(bool){
			this.partie.getPioche().getCarte(position).setSelectionne(false);
		}
	}
}
